# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgresql://wheel_dev:local_dev_password@localhost:5432/wheel_design_system

# Redis
REDIS_URL=redis://localhost:6379

# WebSocket
WEBSOCKET_PORT=3002
WEBSOCKET_URL=ws://localhost:3002

# Workspace Contexts
ENABLE_CONSULTANT=true
ENABLE_CLIENT=true
ENABLE_ADMIN=true
ENABLE_EXPERT=true
ENABLE_TOOL_CREATOR=true
ENABLE_FOUNDER=true

# Development Features
HOT_RELOAD=true
SOURCE_MAPS=true
MOCK_DATA=true
DEBUG_MODE=true

# Storybook
STORYBOOK_PORT=3000

# API Configuration
API_BASE_URL=http://localhost:3001/api
API_VERSION=v1

# Theme System
THEME_STORAGE=redis
THEME_CACHE_TTL=3600

# Real-time Features
ENABLE_WEBSOCKET=true
ENABLE_COLLABORATION=true
COLLABORATION_TIMEOUT=30000

# Performance
BUNDLE_ANALYZER=false
PERFORMANCE_MONITORING=true

# Security (Development Only)
DISABLE_CSRF=true
ALLOW_CORS=true
DEBUG_TOKENS=true

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev
